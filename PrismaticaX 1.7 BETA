    Title = "Aimbot Mode",
    Desc = "Select aimbot mode",
    Values = {"Hold", "Toggle"},
    Value = "Hold",
    Callback = function(value)
        aimbotMode = value
        if aimbotMode == "Hold" then
            aimbotActive = false
            Aimbot:DisableAimbot()
            lockedTarget = nil
        end
    end
})

