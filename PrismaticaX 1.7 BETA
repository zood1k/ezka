    Title = "Select Theme",
    Desc = "Change the UI theme",
    Values = {
        "Dark", "Light", "Rose", "Amber", "CottonCandy",
        "Crimson", "Emerald", "Indigo", "Midnight",
        "MonokaiPro", "Plant", "Rainbow", "Red",
        "Violet", "Sky"
    },
    Value = "Dark",
    Callback = function(value)
        WindUi:SetTheme(value)
    end
})

-- Infinite jump handler
UserInputService.JumpRequest:Connect(function()
    if InfiniteJumpEnabled and LocalPlayer.Character then
        local humanoid = LocalPlayer.Character:FindFirstChild("Humanoid")
        if humanoid then
            humanoid:ChangeState(Enum.HumanoidStateType.Jumping)
        end
    end
end)

-- Visual effects implementations
function VisualEffects:FireAura()
    local char = LocalPlayer.Character
    if not char then return end
    local root = char:FindFirstChild("HumanoidRootPart")
    if not root then return end

    local fire = Instance.new("Fire")
    fire.Name = "FireAura"
    fire.Size = 5
    fire.Heat = 9
    fire.Color = RainbowColor(tick())
    fire.SecondaryColor = RainbowColor(tick() + 2)
    fire.Parent = root

    rainbowUpdaters["FireAura"] = function(t)
        if fire and fire.Parent then
            fire.Color = RainbowColor(t)
            fire.SecondaryColor = RainbowColor(t + 2)
        else
            rainbowUpdaters["FireAura"] = nil
            StopRainbowLoop()
        end
    end
    StartRainbowLoop()
end

function VisualEffects:SmokeTrail()
    local char = LocalPlayer.Character
    if not char then return end
    local root = char:FindFirstChild("HumanoidRootPart")
    if not root then return end

    local smoke = Instance.new("Smoke")
    smoke.Name = "SmokeTrail"
    smoke.Opacity = 0.3
    smoke.Color = RainbowColor(tick())
    smoke.Size = 0.5
    smoke.Parent = root

    rainbowUpdaters["SmokeTrail"] = function(t)
        if smoke and smoke.Parent then
            smoke.Color = RainbowColor(t)
        else
            rainbowUpdaters["SmokeTrail"] = nil
            StopRainbowLoop()
        end
    end
    StartRainbowLoop()
end

function VisualEffects:SparkleBody()
    local char = LocalPlayer.Character
    if not char then return end
    local root = char:FindFirstChild("HumanoidRootPart")
    if not root then return end

    local sparkles = Instance.new("Sparkles")
    sparkles.Name = "BodySparkles"
    sparkles.SparkleColor = RainbowColor(tick())
    sparkles.Parent = root

    rainbowUpdaters["Sparkles"] = function(t)
        if sparkles and sparkles.Parent then
            sparkles.SparkleColor = RainbowColor(t)
        else
            rainbowUpdaters["Sparkles"] = nil
            StopRainbowLoop()
        end
    end
    StartRainbowLoop()
end

function VisualEffects:ColorShift()
    local char = LocalPlayer.Character
    if not char then return end

    for _, part in pairs(char:GetDescendants()) do
        if part:IsA("BasePart") then
            local colorEffect = Instance.new("ColorCorrectionEffect")
            colorEffect.Name = "ColorShift"
            colorEffect.TintColor = RainbowColor(tick())
            colorEffect.Parent = part
        end
    end

    rainbowUpdaters["ColorShift"] = function(t)
        local char = LocalPlayer.Character
        if not char then
            rainbowUpdaters["ColorShift"] = nil
            StopRainbowLoop()
            return
        end
        for _, part in pairs(char:GetDescendants()) do
            if part:IsA("BasePart") then
                local effect = part:FindFirstChild("ColorShift")
                if effect then
                    effect.TintColor = RainbowColor(t)
                end
            end
        end
    end
    StartRainbowLoop()
end

function VisualEffects:NeonGlow()
    local char = LocalPlayer.Character
    if not char then return end

    for _, part in pairs(char:GetDescendants()) do
        if part:IsA("BasePart") then
            part.Material = Enum.Material.Neon
            part.BrickColor = BrickColor.new(RainbowColor(tick()))
        end
    end

    rainbowUpdaters["NeonGlow"] = function(t)
        local char = LocalPlayer.Character
        if not char then
            rainbowUpdaters["NeonGlow"] = nil
            StopRainbowLoop()
            return
        end
        for _, part in pairs(char:GetDescendants()) do
            if part:IsA("BasePart") then
                part.BrickColor = BrickColor.new(RainbowColor(t))
            end
        end
    end
    StartRainbowLoop()
end

function VisualEffects:StarTrail()
    local char = LocalPlayer.Character
    if not char then return end
    local root = char:FindFirstChild("HumanoidRootPart")
    if not root then return end

    starTrailEmitter = Instance.new("ParticleEmitter")
    starTrailEmitter.Name = "StarTrail"
    starTrailEmitter.Texture = "rbxassetid://243098098"
    starTrailEmitter.Size = NumberSequence.new(0.5)
    starTrailEmitter.Transparency = NumberSequence.new(0)
    starTrailEmitter.Lifetime = NumberRange.new(1)
    starTrailEmitter.Rate = 50
    starTrailEmitter.Speed = NumberRange.new(10)
    starTrailEmitter.VelocitySpread = 180
    starTrailEmitter.Parent = root

    rainbowUpdaters["StarTrail"] = function(t)
        if starTrailEmitter and starTrailEmitter.Parent then
            starTrailEmitter.Color = ColorSequence.new(RainbowColor(t))
        else
            rainbowUpdaters["StarTrail"] = nil
            StopRainbowLoop()
        end
    end
    StartRainbowLoop()
end

-- Initial FOV setup for aimbot
if aimbotEnabled and toggles.Aimbot.Value then
    Aimbot:ShowFov()
end

-- Handle player leaving
game:BindToClose(function()
    CleanupAll()
end)

