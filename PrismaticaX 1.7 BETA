    Title = "Aimbot",
    Desc = "Enable aimbot feature",
    Value = false,
    Callback = function(state)
        aimbotEnabled = state
        if state then
            Aimbot:ShowFov()
            if aimbotMode == "Toggle" and aimbotActive then
                Aimbot:EnableAimbot()
            end
        else
            Aimbot:DisableAimbot()
            Aimbot:HideFov()
            aimbotActive = false
        end
    end
})
